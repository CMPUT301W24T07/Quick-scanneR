<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_events">

    <fragment
        android:id="@+id/navigation_events"
        android:name="com.example.quickscanner.ui.homepage_event.EventFragment"
        android:label="@string/title_events"
        tools:layout="@layout/fragment_events" />

    <fragment
        android:id="@+id/navigation_scanner"
        android:name="com.example.quickscanner.ui.scanner.ScannerFragment"
        android:label="@string/title_scanner"
        tools:layout="@layout/fragment_scan" />

    <fragment
        android:id="@+id/navigation_announcements"
        android:name="com.example.quickscanner.ui.announcements.AnnouncementsFragment"
        android:label="@string/title_announcements"
        tools:layout="@layout/fragment_announcements" />



